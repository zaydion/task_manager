<%= form_with(model: comment, method: :put, id:"edit-comment-form", class: "mb-7") do |form| %>
  <div class="mb-5">
    <%= form.text_field :body, placeholder: "Add new comment", class: "inline-block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-96" %>
    <%= form.submit "Save", class: "btn py-2 ml-2 bg-blue-600 text-white" %>
  <%= button_tag "Cancel", data: { action: "comments#hideEditForm" }, class: "btn py-2 ml-2", type: :reset %>
  </div>
<% end %>
