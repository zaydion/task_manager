<%= form_with(model: user) do |f| %>
    <%= render 'shared/errors', object: user %>


  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <% if user.new_record? %>
    <%= f.submit 'Create Account', class: 'btn bg-blue-600 text-white' %>
  <% else %>
    <%= f.submit 'Update Account', class: 'btn bg-blue-600 text-white' %>
  <% end %>
<% end %>
